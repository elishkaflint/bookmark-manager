<h2><%= params[:title] %></h2>

<ul>
  <% if @comments.empty? %>
    <h3>No comments to display</h3>
  <% else %>
  <% @comments.each do |comment| %>
    <li><%= comment.comment %></li>
  <% end %>
  <% end %>

</ul>

<form action="/bookmarks/comments" method="post">
  <input type="text" name="comment">
  <input type="hidden" name="id" value="<%= params[:id] %>">
  <input type="hidden" name="title" value="<%= params[:title] %>">
  <input type="submit" value="Add Comment">
</form>

<form action="/bookmarks" method="get">
  <input type="submit" value="Back to Bookmarks">
</form>
